<main>
    <section class="content-wrapper">
        <section class="messages-container">

            {{#each messages}}
            <div class="message">
                <h2 class="message__title">{{this.title}}</h2>
                <p class="message__body">{{this.text}}</p>
                <div class="message__info">
                    <span>{{this.timestamp}}</span>
                    {{#if this.isAuthor}}
                    <span class="isAuthor">{{this.author.username}}</span>

                    {{else}}
                    <span>{{this.author.username}}</span>

                    {{/if}}
                </div>
            </div>
            {{/each}}

        </section>
        {{#if user}}
        <section class="message-form-container">

            <form action="/new-message" method="POST" class="message-form">
                <h2>Create A Message!</h2>
                <div class="input-container">
                    <label for="title">Title: </label>
                    <input type="text" name="title">
                </div>
                <div class="input-container">
                    <label for="text"> Message:</label>
                    <textarea name="text" id="" cols="30" rows="10" placeholder="Write here!"> </textarea>
                </div>
                <button type="submit">Submit</button>
            </form>
        </section>
    </section>
    {{/if}}

</main>
{{#if user}}
<button id="show-message-form">Create A Message!</button>
{{/if}}